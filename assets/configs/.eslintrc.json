{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-unused-vars": "warn",
		"no-console": "off",
		"eqeqeq": ["error", "always"],
		"curly": ["error", "all"],
		"brace-style": ["error", "1tbs"],
		"comma-dangle": ["error", "es5"],
		"no-trailing-spaces": "error",
		"eol-last": ["error", "always"]
	}
}
